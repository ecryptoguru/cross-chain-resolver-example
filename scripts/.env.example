# Scripts Environment Variables Example
# Copy this file to .env and fill in values as needed.

# --- Global Ethereum Settings (used by config.ts and deployments) ---
PRIVATE_KEY=
RPC_URL=
CHAIN_ID=11155111
VERIFY_CONTRACT=false
EXPLORER_URL=https://sepolia.etherscan.io
API_KEY=

# Optional deployment params
INITIAL_OWNER=
CREATE_SAMPLE_ESCROW=false

# Logging
LOG_LEVEL=info

# --- Common Ethereum RPC aliases used by various scripts ---
# Some scripts read ETHEREUM_RPC_URL or SEPOLIA_RPC_URL instead of RPC_URL
ETHEREUM_RPC_URL=
SEPOLIA_RPC_URL=

# --- NEAR Settings (used by test, monitor, and register scripts) ---
NEAR_NETWORK_ID=testnet
NEAR_NODE_URL=https://rpc.testnet.near.org
# Some scripts may read NEAR_RPC_URL as an alias to NEAR_NODE_URL
NEAR_RPC_URL=https://rpc.testnet.near.org
NEAR_ACCOUNT_ID=
NEAR_PRIVATE_KEY=

# NEAR contracts and bridge
NEAR_ESCROW_CONTRACT=escrow-v2.fusionswap.testnet
# Some scripts read NEAR_ESCROW_CONTRACT_ID instead
NEAR_ESCROW_CONTRACT_ID=escrow-v2.fusionswap.testnet
NEAR_BRIDGE=0x0000000000000000000000000000000000000000

# --- Test Parameters ---
# NEAR -> ETH tests
ETH_RECIPIENT=0x0000000000000000000000000000000000000000
NEAR_TRANSFER_AMOUNT=1

# ETH -> NEAR tests
RECIPIENT=fusionswap.testnet
ETH_TRANSFER_AMOUNT=0.001

# Timelock for deposits (seconds)
TIMELOCK_DURATION=3600

# --- Monitoring script settings ---
POLL_INTERVAL=5000
MAX_RECONNECT_ATTEMPTS=5
HEALTH_CHECK_INTERVAL=30000
