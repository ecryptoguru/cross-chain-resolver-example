{
  "environment": "production",
  "near": {
    "networkId": "mainnet",
    "nodeUrl": "https://rpc.mainnet.near.org",
    "walletUrl": "https://wallet.near.org",
    "helperUrl": "https://helper.near.org",
    "explorerUrl": "https://explorer.near.org",
    "accountId": "production-account.near",
    "privateKey": "ed25519:PRODUCTION_PRIVATE_KEY_FROM_ENV",
    "escrowContractId": "escrow.production-account.near",
    "keyStore": {
      "type": "file",
      "path": "/secure/keystore"
    }
  },
  "ethereum": {
    "network": {
      "name": "mainnet",
      "rpcUrl": "https://mainnet.infura.io/v3/PRODUCTION_PROJECT_ID",
      "chainId": 1,
      "blockConfirmations": 12,
      "gasLimit": "300000",
      "gasPrice": "20000000000"
    },
    "privateKey": "PRODUCTION_ETHEREUM_PRIVATE_KEY_FROM_ENV",
    "escrowContractAddress": "PRODUCTION_ESCROW_CONTRACT_ADDRESS",
    "bridgeContractAddress": "PRODUCTION_BRIDGE_CONTRACT_ADDRESS",
    "maxGasPrice": "100000000000",
    "priorityFee": "2000000000"
  },
  "relayer": {
    "pollingInterval": 5000,
    "maxRetries": 3,
    "retryDelay": 2000,
    "batchSize": 20,
    "storageDir": "/var/lib/relayer/storage",
    "logLevel": "info",
    "enableMetrics": true,
    "metricsPort": 3001
  },
  "security": {
    "enableTeeValidation": true,
    "allowedTeeTypes": ["SGX"],
    "signatureValidation": true,
    "encryptSecrets": true,
    "secretEncryptionKey": "PRODUCTION_ENCRYPTION_KEY_FROM_ENV",
    "rateLimiting": {
      "enabled": true,
      "maxRequestsPerMinute": 100,
      "maxRequestsPerHour": 1000
    }
  },
  "monitoring": {
    "healthCheck": {
      "enabled": true,
      "interval": 30000,
      "timeout": 5000
    },
    "alerts": {
      "enabled": true,
      "webhookUrl": "PRODUCTION_WEBHOOK_URL_FROM_ENV",
      "emailConfig": {
        "smtp": "PRODUCTION_SMTP_SERVER_FROM_ENV",
        "from": "alerts@your-domain.com",
        "to": ["admin@your-domain.com", "ops@your-domain.com"]
      }
    }
  }
}
