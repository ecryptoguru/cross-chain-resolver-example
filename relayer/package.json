{
  "name": "cross-chain-relayer",
  "version": "1.0.0",
  "description": "Relayer for cross-chain swaps between Ethereum and NEAR",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --loader ts-node/esm src/index.ts",
    "dev": "tsx watch src/index.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules tsx node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules tsx node_modules/jest/bin/jest.js --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules tsx node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@near-js/accounts": "^2.2.4",
    "@near-js/keystores-node": "^2.2.4",
    "@near-js/providers": "^2.2.4",
    "@near-js/signers": "^2.2.4",
    "@near-js/wallet-account": "^1.3.3",
    "@types/express": "^4.17.21",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "prom-client": "^14.2.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.22.5",
    "@testing-library/jest-dom": "^6.1.4",
    "@types/bn.js": "^5.2.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-extended": "^4.0.2",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
